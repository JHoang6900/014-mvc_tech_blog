<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <nav
      id="navigation-bar"
      class="flex items-center justify-between flex-wrap bg-stone-500 p-6 mb-8"
    >
      <div class="flex items-center flex-shrink-0 text-white mr-6">
        <span class="font-semibold text-xl tracking-tight">The Tech Blog</span>
      </div>
      <div class="block lg:hidden">
        <button
          class="flex items-center px-3 py-2 border rounded text-stone-200 border-stone-400 hover:text-white hover:border-white"
        >
        </button>
      </div>
      <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
        <div class="text-sm lg:flex-grow">
          <a
            href="./home"
            class="block mt-4 lg:inline-block lg:mt-0 text-stone-200 hover:text-white mr-4"
          >
            Home
          </a>
          <a
            href="./posts"
            class="block mt-4 lg:inline-block lg:mt-0 text-stone-200 hover:text-white mr-4"
          >
            Posts
          </a>
          {{! conditionally render login or logout links  }}
          {{#if logged_in}}
            <a
              href="#responsive-header"
              class="block mt-4 lg:inline-block lg:mt-0 text-stone-200 hover:text-white"
            >
              Logout
            </a>
          {{else}}
            <a href="./login"   class="block mt-4 lg:inline-block lg:mt-0 text-stone-200 hover:text-white">Login
            </a>
          {{/if}}
        </div>
      </div>
    </nav>

  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}

  </head>
  <body>
    {{{body}}}
  </body>
</html>